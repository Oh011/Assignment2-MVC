
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] </title>

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

</head>
<body>


    @*Nav Bar*@

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container bg-light-subtle">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto me-auto mb-2 mb-lg-0 gap-2">

                    <li class="nav-item">
                        <a asp-route-id="20" class=" active btn btn-primary" aria-current="page" asp-controller="Home"
                           asp-action="Index">Home</a>

                    </li>

                    <li class="nav-item">


                        <a asp-route-id="20" class="btn btn-danger" aria-current="page" asp-controller="Home"
                           asp-action="AboutUs">AboutUs</a>
                    </li>



                    <li class="nav-item">


                        <a asp-route-id="20" class="btn btn-warning" aria-current="page" asp-controller="Home"
                           asp-action="ContactUs">ContactUs</a>
                    </li>


                    <li class="nav-item">




                        <a asp-route-id="20" class=" btn btn-success" aria-current="page" asp-controller="Home"
                           asp-action="Privacy">Privacy</a>
                    </li>



                    <li class="nav-item">




                        <a asp-route-id="20" class=" btn btn-info" aria-current="page" asp-controller="Account"
                           asp-action="Login">LogIn</a>
                    </li>




                    <li class="nav-item">




                        <a asp-route-id="20" class=" btn btn-secondary" aria-current="page" asp-controller="Account"
                           asp-action="Register">Register</a>
                    </li>





                </ul>

            </div>
        </div>
    </nav>


    @*End nav bar*@



    <div>
        @RenderBody()
    </div>

    @*footer start*@

    <footer class="bg-dark text-white text-center py-3 position-absolute bottom-0 start-0 end-0">
        <p>&copy; 2025 My Website. Follow us:</p>
        <a target="_blank" href="https://facebook.com" class="text-white mx-2"><i class="fab fa-facebook"></i></a>
        <a href="https://twitter.com" class="text-white mx-2"><i class="fab fa-twitter"></i></a>
        <a href="https://linkedin.com" class="text-white mx-2"><i class="fab fa-linkedin"></i></a>

    </footer>
    @*footer end*@




    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

</body>
</html>
